class RegCourse
{
    public static void main(String[]args)throws IOException
{   
    JFrame f= new JFrame();
    Course c= new Course();
    Verify v = new Verify();
    Registration r= new Registration();
    PrintWriter out= new PrintWriter("Subject.txt");
    String a ="";

    r.faculty();
    c.course();
    String[] options ={"Add Subject","Drop Subject","Verify","Select"};
    String choice= (String) JOptionPane.showInputDialog(f,"Select Your Action","Input",JOptionPane.INFORMATION_MESSAGE,null,options,options[3]);
    if(choice.equals(options[0])){r.AddSub(); 
        a =r.message;}
    else if(choice.equals(options[1])){r.DropSub(); 
        a =r.message;}
    else if(choice.equals(options[2])){v.VerifySub();
